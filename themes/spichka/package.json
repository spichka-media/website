{
  "name": "sage",
  "private": true,
  "browserslist": [
    "extends @roots/browserslist-config"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "bud dev",
    "build": "bud build",
    "translate": "yarn translate:pot && yarn translate:update",
    "translate:pot": "wp i18n make-pot . ./resources/lang/sage.pot --include=\"app,resources\"",
    "translate:update": "wp i18n update-po ./resources/lang/sage.pot ./resources/lang/*.po",
    "translate:compile": "yarn translate:mo && yarn translate:js",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print",
    "translate:mo": "wp i18n make-mo ./resources/lang ./resources/lang",
    "lint": "yarn lint:js && yarn lint:css && yarn lint:php",
    "lint:js": "eslint resources/scripts",
    "lint:css": "stylelint \"resources/**/*.{css,scss,vue}\"",
    "lint:php": "node_modules/.bin/blade-formatter --write resources/**/*.blade.php && node_modules/.bin/blade-formatter --write app/**/*.php && node_modules/.bin/blade-formatter --write index.php && node_modules/.bin/blade-formatter --write functions.php",
    "test": "yarn lint"
  },
  "devDependencies": {
    "@roots/bud": "6.17.0",
    "@roots/bud-eslint": "^6.17.0",
    "@roots/bud-prettier": "^6.17.0",
    "@roots/bud-sass": "6.17.0",
    "@roots/bud-stylelint": "^6.17.0",
    "@roots/eslint-config": "^6.17.0",
    "@roots/sage": "6.17.0",
    "blade-formatter": "^1.41.1"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "5.3.2",
    "swiper": "^10.3.1"
  }
}
